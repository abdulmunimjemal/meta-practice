(: find_triplet (-> Number Number Number Number))
(= (find_triplet $a $b $sum)
    ; (- $sum (+ $a $b))
    ( if (== (* (- $sum (+ $a $b)) (- $sum (+ $a $b)))  (+ (* $a $a) (* $b $b)))
         (* a (* b c))
         ( if (< $b (/ $sum 2))      
              (find_triplet $a (+ $b 1) $sum)
              ( if (< $a (/ $sum 2)) 
                   (find_triplet (+ $a 1) (+ $a 2) $sum)
                   (nil)
              )
         )
    )
)

! (find_triplet 1 2 5)